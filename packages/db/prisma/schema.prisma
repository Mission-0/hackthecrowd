datasource db {
  provider = "postgresql" // Replace with the appropriate provider if you're using something else
  url      = env("DATABASE_URL") // Use your environment variable to point to the database URL
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            Int       @id @default(autoincrement())
  firstName     String
  lastName      String
  email         String    @unique
  userName      String
  genderId      Int
  phoneNumber   String
  password      String
  walletAddress String?
  projects      Project[]
  votes         Vote[] // This line adds a relation to Vote
}

model Project {
  id         Int         @id @default(autoincrement())
  name       String
  amount     Float
  userId     Int
  countDown  DateTime
  milestones Milestone[]
  raisedBy   User        @relation(fields: [userId], references: [id])
}

model Milestone {
  id          Int      @id @default(autoincrement())
  description String
  dueDate     DateTime
  completed   Boolean  @default(false)
  votes       Vote[]
  projectId   Int
  project     Project  @relation(fields: [projectId], references: [id])
}

model Vote {
  id          Int       @id @default(autoincrement())
  userId      Int
  milestoneId Int
  user        User      @relation(fields: [userId], references: [id])
  milestone   Milestone @relation(fields: [milestoneId], references: [id])
}
